#******************************************************************************
#
# Makefile - Rules for building the libraries, examples and docs.
#
# ${copyright}
#
# This is part of revision ${version} of the AmbiqSuite Development Package.
#
#******************************************************************************
TARGET := libam_hal
COMPILERNAME := gcc
PROJECT := libam_hal_gcc
CONFIG := bin

VERBOSE ?= 0

SHELL:=/bin/bash

# Enable printing explicit commands with 'make VERBOSE=1'
ifneq ($(VERBOSE),1)
Q:=@
endif

#### Setup ####

TOOLCHAIN ?= arm-none-eabi
PART = apollo5b
CPU = cortex-m55
FPU = auto
# Default to FPU hardware calling convention.  However, some customers and/or
# applications may need the software calling convention.
#FABI = softfp
FABI = hard

#### Required Executables ####
CC = $(TOOLCHAIN)-gcc
GCC = $(TOOLCHAIN)-gcc
CPP = $(TOOLCHAIN)-cpp
LD = $(TOOLCHAIN)-ld
CP = $(TOOLCHAIN)-objcopy
OD = $(TOOLCHAIN)-objdump
RD = $(TOOLCHAIN)-readelf
AR = $(TOOLCHAIN)-ar
SIZE = $(TOOLCHAIN)-size
RM = $(shell which rm 2>/dev/null)

EXECUTABLES = CC LD CP OD AR RD SIZE GCC
K := $(foreach exec,$(EXECUTABLES),\
        $(if $(shell which $($(exec)) 2>/dev/null),,\
        $(info $(exec) not found on PATH ($($(exec))).)$(exec)))
$(if $(strip $(value K)),$(info Required Program(s) $(strip $(value K)) not found))

ifneq ($(strip $(value K)),)
all clean:
	$(info Tools $(TOOLCHAIN)-$(COMPILERNAME) not installed.)
	$(RM) -rf bin
else

DEFINES = -DAM_ASSERT_INVALID_THRESHOLD=0
DEFINES+= -DAM_DEBUG_ASSERT
DEFINES+= -DAM_PART_APOLLO5B
DEFINES+= -Dgcc

INCLUDES = -I../../../../../CMSIS/ARM/Include
INCLUDES+= -I../../../../../CMSIS/AmbiqMicro/Include
INCLUDES+= -I../../../../../mcu/apollo5b
INCLUDES+= -I../../../../../mcu/apollo5b/hal
INCLUDES+= -I../../../../../utils

VPATH = ../../../../../mcu/apollo5b/hal
VPATH+=:../../../../../mcu/apollo5b/hal/mcu

SRC = am_hal_access.c
SRC += am_hal_adc.c
SRC += am_hal_audadc.c
SRC += am_hal_bootrom_helper.c
SRC += am_hal_cachectrl.c
SRC += am_hal_card.c
SRC += am_hal_card_host.c
SRC += am_hal_clkgen.c
SRC += am_hal_clkmgr.c
SRC += am_hal_cmdq.c
SRC += am_hal_dcu.c
SRC += am_hal_debug.c
SRC += am_hal_dsi.c
SRC += am_hal_global.c
SRC += am_hal_gpdma.c
SRC += am_hal_gpio.c
SRC += am_hal_i2s.c
SRC += am_hal_info.c
SRC += am_hal_infoc.c
SRC += am_hal_interrupt.c
SRC += am_hal_iom.c
SRC += am_hal_ios.c
SRC += am_hal_itm.c
SRC += am_hal_mcuctrl.c
SRC += am_hal_mpu.c
SRC += am_hal_mram.c
SRC += am_hal_mspi.c
SRC += am_hal_pdm.c
SRC += am_hal_pin.c
SRC += am_hal_pwrctrl.c
SRC += am_hal_queue.c
SRC += am_hal_reset.c
SRC += am_hal_rtc.c
SRC += am_hal_sdhc.c
SRC += am_hal_secure_ota.c
SRC += am_hal_security.c
SRC += am_hal_stimer.c
SRC += am_hal_sysctrl.c
SRC += am_hal_syspll.c
SRC += am_hal_systick.c
SRC += am_hal_timer.c
SRC += am_hal_tpiu.c
SRC += am_hal_uart.c
SRC += am_hal_usb.c
SRC += am_hal_utils.c
SRC += am_hal_wdt.c

CSRC = $(filter %.c,$(SRC))
ASRC = $(filter %.s,$(SRC))

OBJS = $(CSRC:%.c=$(CONFIG)/%.o)
OBJS+= $(ASRC:%.s=$(CONFIG)/%.o)

DEPS = $(CSRC:%.c=$(CONFIG)/%.d)
DEPS+= $(ASRC:%.s=$(CONFIG)/%.d)

CFLAGS = -mthumb -mcpu=$(CPU) -mfpu=$(FPU) -mfloat-abi=$(FABI)
CFLAGS+= -ffunction-sections -fdata-sections
CFLAGS+= -MMD -MP -std=c99 -Wall -g
# Libraries O3 for production, examples O0 for debug.
CFLAGS+= -O3
#### INTERNAL BEGIN ####
CFLAGS+= -g -ggdb
#### INTERNAL END ####
CFLAGS+= $(DEFINES)
CFLAGS+= $(INCLUDES)
CFLAGS+= 

#
# Options to generate assembly listing with the source code.
# -g:   Produce debugging information
# -Wa,: Pass option to the assembler
# -a:   Turn on high-level assembly and symbols listing (must preceed the following options)
#  d:   Omit debugging directives
#  n:   Omit forms processing
#  h:   Include high-level source
#  l:   Include assembly
#  s:   Include symbol table
# Uncomment the next line to generate listing files.
#EXTRA_CFLAGS+= -Wa,-adhlns="$(CONFIG)/$*.lst"

# Additional user specified CFLAGS
CFLAGS+=$(EXTRA_CFLAGS)

ODFLAGS = -S

#### Rules ####
all: directories $(CONFIG)/$(TARGET).a

directories: $(CONFIG)

$(CONFIG):
	@mkdir -p $@

$(CONFIG)/%.o: %.c $(CONFIG)/%.d $(INCS)
	@echo " Compiling $(COMPILERNAME) $<"
	$(Q) $(CC) -c $(CFLAGS) $< -o $@

$(CONFIG)/%.o: %.s $(CONFIG)/%.d $(INCS)
	@echo " Assembling $(COMPILERNAME) $<"
	$(Q) $(CC) -c $(CFLAGS) $< -o $@

$(CONFIG)/$(TARGET).a: $(OBJS)
	@echo " Library $(COMPILERNAME) $@"
	$(Q) $(AR) rsvc $@ $(OBJS)

clean:
	@echo "Cleaning..."
	$(Q) $(RM) -f $(OBJS) $(DEPS) \
	    $(CONFIG)/$(TARGET).a

$(CONFIG)/%.d: ;

# Automatically include any generated dependencies
-include $(DEPS)
endif
.PHONY: all clean directories

